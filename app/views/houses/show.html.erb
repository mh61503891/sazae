<%= image_tag 'shikanogokoro.jpg', class: 'front', alt: "front image." %>

<div class="row">
  <div class="col-sm-12">
    <%= form_for @new_comment, id: 'new_comment', url: house_comments_path(house_id: @house), remote: true do |f| %>
      <div class="vote form-group">
        <%= f.text_area :body, class: "form-control", rows: 2, placeholder: "どうしたい？", autofocus: true %>
      </div>
      <div align="right">
        <%= button_tag type: 'submit', class: 'vote btn btn-primary' do %>
          <i class="fa fa-pencil"></i>
          <span>したらええがなー</span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div id="comment-list" class="row">
  <%= render partial: 'comment', collection: @house.comments.reverse_order %>
</div>

<div class="vr">
  <iframe id="vr" src='/contents/<%= @house.id %>/vr/' name="vr">iframe</iframe>
</div>

<%= form_for @house, class: "form-horizontal" do |f| %>

  <div class="form-group">
    <label class="col-sm-2 control-label"><%= House.human_attribute_name(:title) %></label>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label"><%= House.human_attribute_name(:owner) %></label>
    <div class="col-sm-10">
      <%= f.text_field :owner, class: "form-control", disabled: true %>
    </div>
  </div>
<% end %>

