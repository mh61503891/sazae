<%= image_tag 'shikanogokoro.jpg', class: 'front', alt: "front image." %>
<div id="front-image-message" align="center">front image</div>

<form role="form">
  <div class="form-group">
    <textarea class="form-control" rows="2" placeholder="どうしたい？"></textarea>
  </div>
  <div align="right">
    <button type="button" class="btn btn-primary">
      <i class="fa fa-pencil"></i>
      <span>したらええがなー</span>
    </button>
  </div>
</form>

<div class="row">
<% @house.comments.each do |comment| %>
  <div class="balloon-wrapper">
    <div id='<%= comment.id %>'>
      <p class="balloon-right">
        <%= comment.body %>
      </p>
      <button type="button" class="pull-right like btn btn-xs btn-info" data-url="<%= like_house_comment_path(house_id: comment.house.id, id: comment.id, format: :json) %>">
        <i class="fa fa-star"></i>
        <span>せやな!</span>
        <span class="count"><%= comment.like_count %></span>
      </button>
      <br>
    </div>
  <% end %>
</div>

<div class="vr">
  <iframe id="vr" src='/contents/<%= @house.id %>/vr/' name="vr">iframe</iframe>
</div>

<%= form_for @house, class: "form-horizontal" do |f| %>

  <div class="form-group">
    <label class="col-sm-2 control-label"><%= House.human_attribute_name(:title) %></label>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label"><%= House.human_attribute_name(:owner) %></label>
    <div class="col-sm-10">
      <%= f.text_field :owner, class: "form-control", disabled: true %>
    </div>
  </div>
<% end %>

